generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  email    String   @unique
  name     String
  password String
  recipe   Recipe[]
}

model Recipe {
  id          String       @id @default(auto()) @map("_id") @db.ObjectId
  title       String       @unique
  description String
  type        String
  cuisine     String
  instruction String[]
  ingredients Ingredient[]
  imageurl    String
  author      User         @relation(fields: [authorId], references: [id])
  authorId    String       @db.ObjectId
  authorName  String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
}

type Ingredient {
  name     String
  quantity String
}
